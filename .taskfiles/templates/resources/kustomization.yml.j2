---
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

{% if ENV.NS is defined -%}
namespace: {{ ENV.NS }}
{%- endif %}

namePrefix: {{ ENV.APP }}-

resources: []

configMapGenerator:
  - name: gatus
    options:
      labels:
        gatus.io/enabled: 'true'
    files:
      - {{ ENV.APP }}.yml=gatus.yml

labels:
  - pairs:
      app.kubernetes.io/name: {{ ENV.APP }}
    includeTemplates: true
    includeSelectors: true
