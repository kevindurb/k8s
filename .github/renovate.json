{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    ":automergeDigest",
    ":automergeLinters",
    ":automergePatch",
    ":automergeMinor",
    ":disableRateLimiting"
  ],
  "ignoreTests": true,
  "automergeType": "pr",
  "automergeStrategy": "merge-commit",
  "platform": "github",
  "repositories": ["kevindurb/k8s"],
  "kubernetes": {
    "managerFilePatterns": ["/apps/.+\\.yaml$/", "/apps/.+\\.yml$/"]
  },
  "argocd": {
    "managerFilePatterns": ["/apps/.+app\\.yml$/", "/apps/.+app\\.yaml$/"]
  }
}
